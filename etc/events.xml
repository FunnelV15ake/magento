<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="newsletter_subscriber_save_before">
        <observer name="new_subscriber_from_newsletter" instance="GetResponse\GetResponseIntegration\Observer\SubscribeFromNewsletter"/>
    </event>
    <event name="customer_account_edited">
        <observer name="update_subscriber_newsletter_settings" instance="GetResponse\GetResponseIntegration\Observer\SubscribeSettingsUpdate" />
    </event>
    <event name="adminhtml_customer_save_after">
        <observer name="update_subscriber_newsletter_settings" instance="GetResponse\GetResponseIntegration\Observer\SubscribeSettingsUpdate" />
    </event>
</config>