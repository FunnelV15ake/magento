<?xml version="1.0"?>
<config>
    <modules>
        <GetresponseIntegration_Getresponse>
            <version>19.1.21</version>
        </GetresponseIntegration_Getresponse>
    </modules>
    <crontab>
        <jobs>
            <GetresponseIntegration_Getresponse>
                <schedule><cron_expr>*/1 * * * *</cron_expr></schedule>
                <run>
                    <model>getresponse/GetresponseCronjobObserver::exportJobsToGetresponse</model>
                </run>
            </GetresponseIntegration_Getresponse>
        </jobs>
    </crontab>
    <global>
        <helpers>
            <getresponse>
                <class>GetresponseIntegration_Getresponse_Helper</class>
            </getresponse>
        </helpers>
        <blocks>
            <getresponse>
                <class>GetresponseIntegration_Getresponse_Block_Adminhtml_Adminblock</class>
            </getresponse>
        </blocks>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <getresponse_init_before>
                        <class>GetresponseIntegration_Getresponse_Model_Observer</class>
                        <method>initBeforeEventAction</method>
                        <type>singleton</type>
                    </getresponse_init_before>
                </observers>
            </controller_action_layout_load_before>
            <checkout_submit_all_after>
                <observers>
                    <getresponse_checkout_all_after_form_submitted>
                        <class>GetresponseIntegration_Getresponse_Model_Observer</class>
                        <method>checkoutAllAfterFormSubmitted</method>
                        <type>singleton</type>
                    </getresponse_checkout_all_after_form_submitted>
                </observers>
            </checkout_submit_all_after>
            <sales_quote_address_save_after>
                <observers>
                    <getresponse_sales_quote_address_save_after>
                        <class>GetresponseIntegration_Getresponse_Model_Observer</class>
                        <method>checkoutSaveAddress</method>
                        <type>singleton</type>
                    </getresponse_sales_quote_address_save_after>
                </observers>
            </sales_quote_address_save_after>
            <sales_order_place_after>
                <observers>
                    <getresponse_order_create_handler>
                        <class>GetresponseIntegration_Getresponse_Model_ECommerceObserver</class>
                        <method>createOrderHandler</method>
                        <type>singleton</type>
                    </getresponse_order_create_handler>
                </observers>
            </sales_order_place_after>
            <sales_order_save_after>
                <observers>
                    <getresponse_order_details_changed>
                        <class>GetresponseIntegration_Getresponse_Model_ECommerceObserver</class>
                        <method>orderDetailsChangedHandler</method>
                        <type>singleton</type>
                    </getresponse_order_details_changed>
                </observers>
            </sales_order_save_after>
        </events>
        <models>
            <getresponse>
                <class>GetresponseIntegration_Getresponse_Model</class>
                <resourceModel>getresponse_resource</resourceModel>
            </getresponse>
            <getresponse_resource>
                <class>GetresponseIntegration_Getresponse_Model_Resource</class>
                <entities>
                    <productMap>
                        <table>getresponse_product_map</table>
                    </productMap>
                    <scheduleJobsQueue>
                        <table>getresponse_schedule_jobs_queue</table>
                    </scheduleJobsQueue>
                </entities>
            </getresponse_resource>
        </models>
        <resources>
            <getresponse_setup>
                <setup>
                    <module>GetresponseIntegration_Getresponse</module>
                    <class>GetresponseIntegration_Getresponse_Model_Resource_Setup</class>
                </setup>
            </getresponse_setup>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <getresponse>
                    <file>getresponse.xml</file>
                </getresponse>
            </updates>
        </layout>
        <events>
            <newsletter_subscriber_save_after>
                <observers>
                    <getresponse_create_account>
                        <class>GetresponseIntegration_Getresponse_Model_Observer</class>
                        <method>createContact</method>
                        <type>singleton</type>
                    </getresponse_create_account>
                </observers>
            </newsletter_subscriber_save_after>
            <controller_action_layout_generate_blocks_before>
                <observers>
                    <getresponse_block_observer>
                        <type>singleton</type>
                        <class>GetresponseIntegration_Getresponse_Model_Observer</class>
                        <method>set_block</method>
                    </getresponse_block_observer>
                </observers>
            </controller_action_layout_generate_blocks_before>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <getresponse_tracking_code_observer>
                        <type>singleton</type>
                        <class>GetresponseIntegration_Getresponse_Model_Observer</class>
                        <method>addTrackingCodeToHeader</method>
                    </getresponse_tracking_code_observer>
                </observers>
            </core_block_abstract_prepare_layout_before>
            <!-- E-commerce -->
            <checkout_cart_save_after>
                <observers>
                    <getresponse2_add_to_cart_shop_webhook>
                        <class>GetresponseIntegration_Getresponse_Model_ECommerceObserver</class>
                        <method>updateCartHandler</method>
                        <type>singleton</type>
                    </getresponse2_add_to_cart_shop_webhook>
                </observers>
            </checkout_cart_save_after>
        </events>
        <blocks>
            <getresponse>
                <class>GetresponseIntegration_Getresponse_Block</class>
            </getresponse>
        </blocks>
        <checkout_onepage_index>
            <reference name="checkout.onepage.billing">
                <block type="core/text_list" name="checkout.onepage.billing.extra" as="checkout.onepage.billing.extra">
                <block type="core/template" name="my.billing.bit" template="my/extension/checkout/onepage/billing.extra.phtml"/>
            </block>
        </reference>
    </checkout_onepage_index>
</frontend>
<admin>
    <routers>
        <getresponse>
            <use>admin</use>
            <args>
                <module>GetresponseIntegration_Getresponse</module>
                <frontName>getresponse</frontName>
            </args>
        </getresponse>
    </routers>
</admin>
<adminhtml>
    <menu>
        <getresponse_menu translate="title" module="getresponse">
            <title>GetResponse</title>
            <sort_order>9999</sort_order>
            <children>
                <settings_page module="getresponse">
                    <title>GetResponse Account</title>
                    <action>getresponse/account/index</action>
                </settings_page>
                <export_page module="getresponse">
                    <title>Export Customer Data on Demand</title>
                    <action>getresponse/export/index</action>
                </export_page>
                <viapage_page module="getresponse">
                    <title>Add Contacts During Registrations</title>
                    <action>getresponse/subscription/index</action>
                </viapage_page>
                <viawebform_page module="getresponse">
                    <title>Add Contacts via GetResponse Forms</title>
                    <action>getresponse/webform/index</action>
                </viawebform_page>
                <newsletter_page module="getresponse">
                    <title>Add to Contact List after Customer Subscribes</title>
                    <action>getresponse/newsletter/index</action>
                </newsletter_page>
                <web_traffic_page module="getresponse">
                    <title>Web Event Tracking</title>
                    <action>getresponse/webtraffic/index</action>
                </web_traffic_page>
                <shop_page module="getresponse">
                    <title>GetResponse Ecommerce</title>
                    <action>getresponse/ecommerce/index</action>
                </shop_page>
            </children>
        </getresponse_menu>
    </menu>
    <events>
        <newsletter_subscriber_save_after>
            <observers>
                <getresponse_create_account>
                    <class>GetresponseIntegration_Getresponse_Model_Observer</class>
                    <method>createContact</method>
                    <type>singleton</type>
                </getresponse_create_account>
            </observers>
        </newsletter_subscriber_save_after>
        <core_block_abstract_prepare_layout_before>
            <observers>
                <getresponse_jquery_prepare_layout_before>
                    <class>GetresponseIntegration_Getresponse_Model_Observer</class>
                    <method>addJQueryToHeader</method>
                </getresponse_jquery_prepare_layout_before>
                <getresponse_css_prepare_layout_before>
                    <class>GetresponseIntegration_Getresponse_Model_Observer</class>
                    <method>addCssToHeader</method>
                </getresponse_css_prepare_layout_before>
            </observers>
        </core_block_abstract_prepare_layout_before>
    </events>
</adminhtml>
</config>

